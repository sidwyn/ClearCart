{
  "manifest_version": 3,
  "name": "ClearCart",
  "version": "1.0.0",
  "description": "Analyzes Amazon product reviews to generate trust scores and removes sponsored content for clearer shopping decisions",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/s*"],
      "js": ["content-search.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.amazon.com/dp/*", "*://*.amazon.com/gp/product/*"],
      "js": ["content-product.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ClearCart - Amazon Trust Scores",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["trust-ui.html", "trust-ui.js"],
      "matches": ["*://*.amazon.com/*"]
    }
  ]
}